<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Validation.Forms.Controls.EntryViews.DatePickerView"
             x:Name="This"
             Spacing="20"
             Orientation="Horizontal"
             Padding="0,5,0,5"
             HeightRequest="{StaticResource EntryHeight}">
    <Label
        Text="{Binding Title, Source={x:Reference This}}"
        Style="{StaticResource FormFieldLabelStyle}"
        WidthRequest="{Binding TitleWidth, Source={x:Reference This}}" />
    <DatePicker
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand" />
</StackLayout>